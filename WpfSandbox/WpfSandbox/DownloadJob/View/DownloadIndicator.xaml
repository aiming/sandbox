<Page x:Class="ExampleLauncher.DownloadIndicator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vm="clr-namespace:ExampleLauncher"
      xmlns:local="clr-namespace:ExampleLauncher"
      mc:Ignorable="d"
      Title="Page1" Height="auto" Width="800">

    <Page.DataContext>
        <vm:DownloaderViewModel />
    </Page.DataContext>

    <Grid Grid.Row="0" Margin="80, 12, 80, 12" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ProgressBar
            Name="DownloadProgressBar"
            Grid.Row="0"
            Value="{Binding Progression}"
            Height="24" Margin="0, 0, 0, 0" />
        <Label Grid.Row="0" Content="{Binding Uri, UpdateSourceTrigger=PropertyChanged}"/>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
            <Label Content="{Binding ReceivedSize, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="/"/>
            <Label Content="{Binding TotalSize, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="{Binding Progression}" Width="60" HorizontalContentAlignment="Right" ContentStringFormat=" {0:0.00}%"/>
        </WrapPanel>
    </Grid>

</Page>
