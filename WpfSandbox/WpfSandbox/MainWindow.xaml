<Window x:Class="ExampleLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Image Source="Images/20230803-P8030215.jpg" Height="800" Grid.Row="0" />
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="28" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="version x.x.x.x-hoge" VerticalAlignment="Top" />
            <Label Grid.Row="1" Content="Awesome Launcher" FontSize="48" HorizontalAlignment="Center"/>
        </Grid>

        <!-- コンテンツ -->
        <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
